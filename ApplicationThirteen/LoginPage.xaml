<Window x:Class="DigiWorkflowApp.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" Margin="30">
            <TextBlock Text="Digi Workflow Login"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Token ID" />
            <TextBox Name="TokenIdTextBox" Height="30" Margin="0,5,0,20"/>

            <Button Content="Login"
                    Height="35"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

