<Window x:Class="DigitalWorkflowApp.SubmitReportPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Digital Workflow"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9F9F9">

    <Grid Margin="20">
        <!-- Top Bar -->
        <DockPanel LastChildFill="False" Margin="0,0,0,20">
            <Label Content="Digital Workflow"
                   FontSize="16"
                   FontWeight="Bold"
                   VerticalAlignment="Center" />
            <Button Content="Logout"
                    DockPanel.Dock="Right"
                    Width="60"
                    Height="25"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Right"/>
        </DockPanel>
        
        <!-- Centered Buttons -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Add Item Button -->
            <Button Content="Add Item"
                    Width="220"
                    Height="50"
                    Margin="0,10"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    FontSize="16"
                   />

            <!-- Edit/Delete Item Button -->
            <Button Content="Edit / Delete Item"
                    Width="220"
                    Height="50"
                    Margin="0,10"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White"
                    FontSize="16"
                    />

            <!-- Submit Report Button -->
            <Button Content="Submit Report"
                    Width="220"
                    Height="50"
                    Margin="0,10"
                    BorderBrush="#235DCB"
                    BorderThickness="1"
                    Background="White"
                    FontSize="16"
                    />
        </StackPanel>
    </Grid>

    <!-- Style for rounded buttons -->
    <Window.Resources>
        <Style x:Key="RoundedButtonTemplate" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="25"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
