<Window x:Class="ApplicationThirteen.ViewReportPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Report" Height="500" Width="600" Background="White">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Report Details"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Item Name:" FontWeight="Bold"/>
            <TextBlock x:Name="ItemNameText" Margin="0,0,0,10"/>

            <TextBlock Text="Installation Location:" FontWeight="Bold"/>
            <TextBlock x:Name="InstallLocationText" Margin="0,0,0,10"/>

            <TextBlock Text="Mounting Type:" FontWeight="Bold"/>
            <TextBlock x:Name="MountTypeText" Margin="0,0,0,10"/>

            <TextBlock Text="Lighting Issue:" FontWeight="Bold"/>
            <TextBlock x:Name="LightIssueText" Margin="0,0,0,10"/>

            <TextBlock Text="Orientation:" FontWeight="Bold"/>
            <TextBlock x:Name="OrientationText" Margin="0,0,0,10"/>

            <TextBlock Text="Distance From Rack:" FontWeight="Bold"/>
            <TextBlock x:Name="RackDistanceText" Margin="0,0,0,10"/>

            <TextBlock Text="Camera Height:" FontWeight="Bold"/>
            <TextBlock x:Name="CameraHeightText" Margin="0,0,0,10"/>

            <TextBlock Text="Remarks:" FontWeight="Bold"/>
            <TextBlock x:Name="RemarksText" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Edit" Width="80" Margin="5" Click="Edit_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="Delete_Click"/>
            <Button Content="Back" Width="80" Margin="5" Click="Back_Click"/>
        </StackPanel>
    </Grid>
    </Window>



