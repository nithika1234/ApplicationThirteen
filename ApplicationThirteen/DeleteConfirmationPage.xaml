<Window x:Class="ApplicationThirteen.DeleteConfirmationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Delete"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White">

    <Border CornerRadius="12" BorderBrush="LightGray" BorderThickness="1" Padding="20" Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Trash Icon -->
            <TextBlock Text="🗑️"
                       FontSize="48"
                       HorizontalAlignment="Center"
                       Foreground="Red"
                       Margin="0,0,0,10"/>

            <!-- Title -->
            <TextBlock Text="Confirm Delete"
                       FontWeight="Bold"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>

            <!-- Description -->
            <TextBlock Text="Deleting this item will permanently delete all the item images and information."
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="10,0,10,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >

                <!-- Cancel -->
                <Button Content="Cancel"
                        Width="80" Height="30"
                        Margin="5"
                        FontSize="14"
                        Background="White"
                        BorderBrush="Gray"
                        Click="Cancel_Click"/>

                <!-- Delete -->
                <Button Content="Delete"
                        Width="80" Height="30"
                        Margin="5"
                        FontSize="14"
                        Background="Red"
                        Foreground="White"
                        BorderBrush="DarkRed"
                        Click="Delete_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>

